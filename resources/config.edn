                            :dev :dev
                            :test :test}



 :backend/env {; Using profile just for debugging purposes.
               :profile #ig/ref :backend/profile
               :config {:debug #profile {:dev #boolean #or [#env DEBUG true]
                                         :prod #boolean #or [#env DEBUG false]}
